<Window x:Class="EktoplazmExtractor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EktoplazmExtractor"
        xmlns:controls="clr-namespace:EktoplazmExtractor.Controls"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="350" Width="525"
        DataContext="{Binding Source={StaticResource ViewModelLocator}, Path=MainWindowVM}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <controls:LabeledTextBox Grid.Column="0" Grid.Row="0" Caption="Url" />

        <Button Grid.Column="1" Grid.Row="0" Command="{Binding StartDownloadCommand}" />

        <ItemsControl Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>